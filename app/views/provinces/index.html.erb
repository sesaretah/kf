<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">
            <%= link_to t(:new), new_province_path%>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @provinces.each do |province| %>
          <tr>
                        <td><%= province.name %></td>
                        <td><%= link_to t(:show), province %></td>
            <td><%= link_to t(:edit), edit_province_path(province) %></td>
            <td><%= link_to t(:destroy), province, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
