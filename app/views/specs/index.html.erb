<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @specs.each do |spec| %>
          <tr>
                        <td><%= spec.title %></td>
                        <td><%= spec.category_id %></td>
                        <td><%= link_to t(:show), spec %></td>
            <td><%= link_to t(:edit), edit_spec_path(spec) %></td>
            <td><%= link_to t(:destroy), spec, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
