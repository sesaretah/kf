<%= form_for(@business, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :yout_business_details %></h3>
</div>
<% if @business.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@business.errors.count, "error") %> prohibited this business from being saved:</h2>

  <ul>
    <% @business.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card-body">
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title , class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :subdomain, class: "form-label" %>
        <%= f.text_field :subdomain , class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :tel, class: "form-label" %>
        <div class="input-group">
          <%= f.text_field :tel, class: "form-control", placeholder: "", style: 'direction: ltr;' %>
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fa fa-phone" aria-hidden="true"></i></span>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :mobile, class: "form-label" %>
        <div class="input-group">
          <%= f.text_field :mobile, class: "form-control", placeholder: "", style: 'direction: ltr;' %>
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fa fa-tablet" aria-hidden="true"></i></span>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :fax, class: "form-label" %>
        <div class="input-group">
          <%= f.text_field :fax , class: "form-control", placeholder: "" , style: 'direction: ltr;'%>
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fa fa-fax" aria-hidden="true"></i></span>
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :telegram_channel, class: "form-label" %>
        <div class="input-group">
          <%= f.text_field :telegram_channel , class: "form-control", placeholder: "" , style: 'direction: ltr;'%>
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fa fa-telegram" aria-hidden="true"></i></span>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :instagram_page, class: "form-label" %>
        <div class="input-group">
          <%= f.text_field :instagram_page , class: "form-control", placeholder: "", style: 'direction: ltr;' %>
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fa fa-instagram" aria-hidden="true"></i></span>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <div class="input-group">
          <%= f.text_field :email , class: "form-control", placeholder: "", style: 'direction: ltr;' %>
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text">@</span>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_area :address , class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <%= f.label :bio, class: "form-label" %>
        <%= f.text_area :bio , class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label class="form-label"><%=t :business_category%></label>
        <% for category in Category.where(level: 1)%>
        <% @classification = Classification.where(category_id: category.id, business_id: @business.id).first%>
        <label class="custom-control custom-checkbox custom-control-inline">
          <input type="checkbox" class="custom-control-input" name="category-<%= category.id%>" id="category-<%= category.id%>" <%if !@classification.blank?%>checked<%end%> value="<%= category.id%>">
          <span class="custom-control-label" style='padding-right: 23px;padding-top: 2px;'><%= category.title%></span>
        </label>
        <%end%>
      </div>
    </div>
  </div>

  <div class="card-footer text-right">
    <button type="submit" class="btn btn-primary"><%=t :submit%></button>
  </div>
  <% end %>
