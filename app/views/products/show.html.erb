<div class='row'>
  <div class="col-lg-3 order-lg-1">
    <% if current_user.id == @business.user_id%>
    <div class="list-group list-group-transparent mb-4 text-center">
      <%= link_to '/businesses/'+@business.id.to_s+'/edit', class: "list-group-item list-group-item-action active small", style:'font-weight:normal;' do%>
      <i class="fe fe-edit" style="vertical-align:middle;"></i> <%=t :edit_your_business%>
      <%end%>
    </div>
    <%end%>
  </div>
  <div class="col-lg-9 order-lg-1">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"></h3>
        <div class="card-options">
          <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
        </div>
      </div>
      
      <div class="card-body">
        <div class='row'>
          <div class='col-md-12 col-lg-12'>
            <div class="form-group">
              <%= label :product, :title , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @product.title %></div>
            </div>
            <div class="form-group">
              <%= label :product, :description , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @product.description %></div>
            </div>
            <div class="form-group">
              <%= label :product, :category_id , class: "form-label", style: 'color: #7795c1;'%>
              <div class="form-control-plaintext"><%= @product.category_id %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
