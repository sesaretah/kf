<div class="col-md-3 col-7">
  <div class="card" style='min-height: 194px;'>
    <%= link_to "/products/#{product.id}" do%>
    <img src="<%= product.image('large')%>" alt="<%= product.title%>" class="card-img-top">
      <div class="card-body d-flex flex-column pr-2 pt-2" style="color:black;">
      <small class="text-muted" style='min-height: 38px;'><%= truncate(product.title, length: 20)%></small>
      <div class="text-muted"></div>
      <div class="text-right small">
        <strong><%= product.price%> <%= rcurrencies(product.currency)%></strong>
      </div>
      <div class="text-center">
      <% if caller == 'settings'&& segment.ext_code.blank?%>
      <%= link_to "/segments/remove_from_segment/#{segment.id}?product_id=#{product.id}", class: "icon", remote: true,data: { confirm: 'Are you sure?' }  do %>
        <i class="fe fe-trash" style='vertical-align:-3px;'></i>
      <%end%>
      <%end%>
    </div>
    </div>
    <%end%>
  </div>
</div>
