<div class="col-md-3">
  <div class="card" >
    <% @upload = Upload.where(uploadable_type: 'Product', uploadable_id: product.id, attachment_type: 'product_attachment').first%>
    <img src="<%if !@upload.blank?%><%= @upload.attachment(:large)%><%else%>/assets/noimage-35-large.jpg<%end%>" alt="<%= product.title%>" class="card-img-top">
      <div class="card-body d-flex flex-column">
      <small><%= product.title%></small>
      <div class="text-muted"></div>
      <div class="d-flex align-items-center pt-5 mt-auto">

      </div>
    </div>
  </div>
</div>
