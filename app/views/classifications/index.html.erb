      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @classifications.each do |classification| %>
          <tr>
                        <td><%= classification.business_id %></td>
                        <td><%= classification.category_id %></td>
                        <td><%= link_to t(:show), classification %></td>
            <td><%= link_to t(:edit), edit_classification_path(classification) %></td>
            <td><%= link_to t(:destroy), classification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
