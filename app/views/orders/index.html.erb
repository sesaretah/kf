<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @orders.each do |order| %>
          <tr>
                        <td><%= order.subtotal %></td>
                        <td><%= order.tax %></td>
                        <td><%= order.shipping %></td>
                        <td><%= order.total %></td>
                        <td><%= order.business_id %></td>
                        <td><%= order.user_id %></td>
                        <td><%= link_to t(:show), order %></td>
            <td><%= link_to t(:edit), edit_order_path(order) %></td>
            <td><%= link_to t(:destroy), order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
