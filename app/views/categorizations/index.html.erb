<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @categorizations.each do |categorization| %>
          <tr>
                        <td><%= categorization.product_id %></td>
                        <td><%= categorization.category_id %></td>
                        <td><%= categorization.level %></td>
                        <td><%= link_to t(:show), categorization %></td>
            <td><%= link_to t(:edit), edit_categorization_path(categorization) %></td>
            <td><%= link_to t(:destroy), categorization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
