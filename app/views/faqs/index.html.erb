<div class="row row-cards">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
      <% if @faqs.blank?%>
      <div class="alert alert-warning mb-4" role="alert">
        <%=t :no_faq_exists%>
      </div>
      <%end%>
      <% @faqs.each do |faq| %>
      <div><%= render partial: 'faqs/faq_block', locals: {faq: faq}%></div>
      <%end%>
      <div class='mb-4'></div>
    </div>
    </div>
  </div>
</div>
